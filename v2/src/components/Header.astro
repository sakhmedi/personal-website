      </div>
    </div>

</header>

<script>
  // === Ð›ÐžÐ“Ð˜ÐšÐ Ð‘Ð£Ð Ð“Ð•Ð Ð ===
  const btnburger = document.getElementById("burgermenu");
  const mobilenav = document.getElementById("navList");
  const burgerxthemeicon = document.getElementById("burgerxtheme");

  btnburger?.addEventListener("click", () => {
    mobilenav?.classList.toggle("hidden");
    mobilenav?.classList.toggle("flex");
    mobilenav?.classList.toggle("flex-col");
    burgerxthemeicon?.classList.toggle("flex-col");
  });

  // === Ð›ÐžÐ“Ð˜ÐšÐ Ð¢Ð•ÐœÐ« ===
  const btn = document.getElementById('themeToggle');
  const root = document.documentElement;

  const saved = localStorage.getItem('theme');
  if (saved === 'light') {
    root.classList.add('light');
  }

  btn?.addEventListener('click', () => {
    root.classList.toggle('light');

    localStorage.setItem(
      'theme',
      root.classList.contains('light') ? 'light' : 'dark'
    );
  });
</script>